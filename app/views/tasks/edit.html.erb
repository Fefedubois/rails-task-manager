
<h1> Update Task </h1>
<div class="mb-3">
<%= form_for(@task, :html => {:class => "form-label"}) do |f| %>
<div class="mb-3>
  <div class = "form-label"> <%= f.label :title %> </div>
 <div class="form-control"><%= f.text_field :title %></div>
</div>

  <div class = "form-label"> <%= f.label :details %> </div>
  <div class="form-control"> <%= f.text_field :details %></div>
  <div class = "form-label"> <%= f.label :completed, "Completed" %> </div>
  <div class="form-control"> <%= f.check_box :completed %> </div>
  <div> <%= f.submit %> </div>
<% end %>
</div>
